{% load widget_tweaks %}
<!-- Hero Section -->
<div class="text-white py-5 mb-5 enterprise-hero">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4 text-white">Let's Talk Enterprise</h1>
                <p class="lead mb-4 text-white-75 enterprise-hero-text">
                    Ready to scale your security and product artifact management? Our enterprise team will work with you to create a custom solution that meets your organization's specific needs.
                </p>
                <div class="d-flex flex-wrap justify-content-center gap-3 mb-4">
                    <span class="badge bg-light bg-opacity-25 rounded-pill px-3 py-2 fs-6">
                        <i class="fas fa-users me-2"></i>Unlimited Users
                    </span>
                    <span class="badge bg-light bg-opacity-25 rounded-pill px-3 py-2 fs-6">
                        <i class="fas fa-shield-alt me-2"></i>Advanced Security
                    </span>
                    <span class="badge bg-light bg-opacity-25 rounded-pill px-3 py-2 fs-6">
                        <i class="fas fa-headset me-2"></i>Dedicated Support
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Form Section -->
<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {% if messages %}
                {% for message in messages %}
                    <div class="alert alert-{{ message.tags }} alert-dismissible fade show mb-4"
                         role="alert">
                        {{ message }}
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endif %}
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <!-- Form Header -->
                    <div class="text-center mb-5">
                        <h2 class="h3 fw-bold text-dark mb-3">Tell Us About Your Needs</h2>
                        <p class="text-muted">We'll get back to you within 1-2 business days with a custom proposal.</p>
                    </div>
                    <form method="post" novalidate>
                        {% csrf_token %}
                        <!-- Company Information Section -->
                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                                <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3 w-10 h-10">
                                    <i class="fas fa-building"></i>
                                </div>
                                <h3 class="h5 fw-semibold mb-0">Company Information</h3>
                            </div>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="{{ form.company_name.id_for_label }}"
                                           class="form-label fw-semibold">
                                        {{ form.company_name.label }} <span class="text-danger">*</span>
                                    </label>
                                    {% render_field form.company_name class="form-control" %}
                                    {% if form.company_name.errors %}<div class="text-danger small mt-1">{{ form.company_name.errors.0 }}</div>{% endif %}
                                </div>
                                <div class="col-md-6">
                                    <label for="{{ form.company_size.id_for_label }}"
                                           class="form-label fw-semibold">
                                        {{ form.company_size.label }} <span class="text-danger">*</span>
                                    </label>
                                    {% render_field form.company_size class="form-select" %}
                                    {% if form.company_size.errors %}<div class="text-danger small mt-1">{{ form.company_size.errors.0 }}</div>{% endif %}
                                </div>
                                <div class="col-md-6">
                                    <label for="{{ form.industry.id_for_label }}" class="form-label fw-semibold">{{ form.industry.label }}</label>
                                    {% render_field form.industry class="form-control" %}
                                    {% if form.industry.errors %}<div class="text-danger small mt-1">{{ form.industry.errors.0 }}</div>{% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- Contact Information Section -->
                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                                <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3 w-10 h-10">
                                    <i class="fas fa-user"></i>
                                </div>
                                <h3 class="h5 fw-semibold mb-0">Contact Information</h3>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="{{ form.first_name.id_for_label }}"
                                           class="form-label fw-semibold">
                                        {{ form.first_name.label }} <span class="text-danger">*</span>
                                    </label>
                                    {% render_field form.first_name class="form-control" %}
                                    {% if form.first_name.errors %}<div class="text-danger small mt-1">{{ form.first_name.errors.0 }}</div>{% endif %}
                                </div>
                                <div class="col-md-6">
                                    <label for="{{ form.last_name.id_for_label }}"
                                           class="form-label fw-semibold">
                                        {{ form.last_name.label }} <span class="text-danger">*</span>
                                    </label>
                                    {% render_field form.last_name class="form-control" %}
                                    {% if form.last_name.errors %}<div class="text-danger small mt-1">{{ form.last_name.errors.0 }}</div>{% endif %}
                                </div>
                                <div class="col-md-6">
                                    <label for="{{ form.email.id_for_label }}" class="form-label fw-semibold">
                                        {{ form.email.label }} <span class="text-danger">*</span>
                                    </label>
                                    {% render_field form.email class="form-control" %}
                                    {% if form.email.errors %}<div class="text-danger small mt-1">{{ form.email.errors.0 }}</div>{% endif %}
                                </div>
                                <div class="col-md-6">
                                    <label for="{{ form.phone.id_for_label }}" class="form-label fw-semibold">{{ form.phone.label }}</label>
                                    {% render_field form.phone class="form-control" %}
                                    {% if form.phone.errors %}<div class="text-danger small mt-1">{{ form.phone.errors.0 }}</div>{% endif %}
                                </div>
                                <div class="col-12">
                                    <label for="{{ form.job_title.id_for_label }}"
                                           class="form-label fw-semibold">{{ form.job_title.label }}</label>
                                    {% render_field form.job_title class="form-control" %}
                                    {% if form.job_title.errors %}<div class="text-danger small mt-1">{{ form.job_title.errors.0 }}</div>{% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- Project Details Section -->
                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                                <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3 w-10 h-10">
                                    <i class="fas fa-project-diagram"></i>
                                </div>
                                <h3 class="h5 fw-semibold mb-0">Project Details</h3>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="{{ form.primary_use_case.id_for_label }}"
                                           class="form-label fw-semibold">
                                        {{ form.primary_use_case.label }} <span class="text-danger">*</span>
                                    </label>
                                    {% render_field form.primary_use_case class="form-select" %}
                                    {% if form.primary_use_case.errors %}
                                        <div class="text-danger small mt-1">{{ form.primary_use_case.errors.0 }}</div>
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    <label for="{{ form.timeline.id_for_label }}" class="form-label fw-semibold">{{ form.timeline.label }}</label>
                                    {% render_field form.timeline class="form-control" %}
                                    {% if form.timeline.errors %}<div class="text-danger small mt-1">{{ form.timeline.errors.0 }}</div>{% endif %}
                                </div>
                            </div>
                        </div>
                        <!-- Message Section -->
                        <div class="mb-5">
                            <div class="d-flex align-items-center mb-4 pb-3 border-bottom">
                                <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3 w-10 h-10">
                                    <i class="fas fa-comment-alt"></i>
                                </div>
                                <h3 class="h5 fw-semibold mb-0">Tell Us More</h3>
                            </div>
                            <div class="mb-3">
                                <label for="{{ form.message.id_for_label }}" class="form-label fw-semibold">
                                    {{ form.message.label }} <span class="text-danger">*</span>
                                </label>
                                {% render_field form.message class="form-control" rows="5" %}
                                {% if form.message.errors %}<div class="text-danger small mt-1">{{ form.message.errors.0 }}</div>{% endif %}
                                <div class="form-text">
                                    Please include details about your specific requirements, number of applications, compliance needs, or integration requirements.
                                </div>
                            </div>
                        </div>
                        <!-- Consent Section -->
                        <div class="mb-4">
                            <div class="form-check">
                                {% render_field form.newsletter_signup class="form-check-input" %}
                                <label class="form-check-label"
                                       for="{{ form.newsletter_signup.id_for_label }}">
                                    {{ form.newsletter_signup.label }}
                                </label>
                            </div>
                        </div>
                        <!-- Development Mode Warning -->
                        <div class="alert alert-warning d-flex align-items-center mb-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <span><strong>Development Mode:</strong> Turnstile verification is not configured. In production, this form will include spam protection.</span>
                        </div>
                        <!-- Submit Section -->
                        <div class="d-flex flex-row justify-content-between align-items-center gap-3 pt-4 border-top">
                            {% block back_button %}
                                <a href="/" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Home
                                </a>
                            {% endblock %}
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-paper-plane me-2"></i>Send Enterprise Inquiry
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
