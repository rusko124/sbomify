{% extends "core/base.html.j2" %}
{% block title %}Payment Cancelled{% endblock %}
{% block styles %}
    <style>
    .large-icon {
        font-size: 4rem;
    }
    </style>
{% endblock %}
{% block content %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-times-circle text-warning large-icon"></i>
                        </div>
                        <h2 class="card-title text-warning mb-3">Payment Cancelled</h2>
                        <p class="lead mb-4">Your payment was cancelled and no charges were made to your account.</p>
                        <div class="mb-4">
                            <p class="text-muted">
                                If you experienced any issues during checkout, please contact our support team for assistance.
                            </p>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="{% url 'core:dashboard' %}" class="btn btn-secondary">
                                <i class="fas fa-tachometer-alt me-2"></i>
                                Back to Dashboard
                            </a>
                            <a href="#" onclick="window.history.back()" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Try Again
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
