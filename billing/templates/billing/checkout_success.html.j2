{% extends "core/base.html.j2" %}
{% block title %}Payment Successful{% endblock %}
{% block styles %}
    <style>
    .large-icon {
        font-size: 4rem;
    }
    </style>
{% endblock %}
{% block content %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success large-icon"></i>
                        </div>
                        <h2 class="card-title text-success mb-3">Payment Successful!</h2>
                        <p class="lead mb-4">
                            Thank you for your purchase. Your subscription is now active and you can start using all the features of your plan.
                        </p>
                        <div class="mb-4">
                            <p class="text-muted">You will receive a confirmation email shortly with your receipt and subscription details.</p>
                        </div>
                        <a href="{% url 'core:dashboard' %}" class="btn btn-primary btn-lg">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
