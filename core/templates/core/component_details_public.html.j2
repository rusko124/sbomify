{% extends "core/base.html.j2" %}
{% comment %}
Template context:
component - Component object
sboms - List of SBOM objects without data and packages fields
{% endcomment %}
{% load widget_tweaks %}
{% load static %}
{% load django_vite %}
{% block title %}Component: {{ component.name }}{% endblock %}
{% block styles %}
    <style>
    .brand-logo {
        height: 3rem;
        max-width: 12rem;
        width: auto;
        object-fit: contain;
    }

    .credits-logo {
        height: 1.25rem;
        width: auto;
        max-width: 5rem;
        object-fit: contain;
    }

    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
        .brand-logo {
            height: 3.25rem;
            max-width: 13rem;
        }
        .credits-logo {
            height: 1.375rem;
            max-width: 5.5rem;
        }
    }
    </style>
{% endblock %}
{% block main %}
    <main class="content public-page mb-4">
        <div class="brand"
             style="background-color: {{ brand.brand_color|default:'#DCDCDC' }}">
            {% if brand.brand_image %}
                <img src="{{ brand.brand_image }}"
                     alt="{{ brand.name }}"
                     class="brand-logo"
                     width="192"
                     height="48">
            {% else %}
                <img src="/static/img/sbomify.svg"
                     alt="sbomify logo"
                     class="brand-logo"
                     width="192"
                     height="48">
            {% endif %}
        </div>
        <div class="pp-content-container">
            <div class="pp-content-bg"
                 style="background-color: {{ brand.brand_color|default:'#DCDCDC' }}"></div>
            <div class="pp-content">
                <div class="page-header mb-4">
                    <div class="d-flex align-items-center gap-3 mb-2">
                        <h1 class="page-title mb-0"
                            style="color: {{ brand.accent_color|default:'#7c8b9d' }}">{{ component.name }}</h1>
                    </div>
                    <div class="text-muted">
                        <small class="me-3">
                            <i class="fas fa-cube me-1"></i>Component
                        </small>
                        <small class="me-3">
                            <i class="fas fa-tag me-1"></i>{{ component.get_component_type_display }}
                        </small>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <div class="vc-dashboard-stats"
                             data-item-type="component"
                             data-item-id="{{ component.id }}"></div>
                    </div>
                </div>
                {% if component.component_type == 'sbom' %}
                    <div class="row pp-main">
                        <div class="col-12">
                            {{ sboms_data|json_script:"sboms-data" }}
                            <div class="vc-sboms-table"
                                 data-sboms-data-element-id="sboms-data"
                                 data-component-id="{{ component.id }}"
                                 data-has-crud-permissions="false"
                                 data-is-public-view="true"></div>
                        </div>
                    </div>
                {% elif component.component_type == 'document' %}
                    <div class="row pp-main">
                        <div class="col-12">
                            {{ documents_data|json_script:"documents-data" }}
                            <div class="vc-documents-table"
                                 data-documents-data-element-id="documents-data"
                                 data-has-crud-permissions="false"></div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="credits">
            Powered by <a href="https://sbomify.com">
            <img src="/static/img/sbomify.svg"
                 alt="sbomify logo"
                 class="credits-logo"
                 width="80"
                 height="20" />
        </a>
    </div>
</main>
{% endblock %}
{% block scripts %}
    {% vite_asset 'core/js/main.ts' %}
    {% if component.component_type == 'sbom' %}
        {% vite_asset 'sboms/js/main.ts' %}
    {% elif component.component_type == 'document' %}
        {% vite_asset 'documents/js/main.ts' %}
    {% endif %}
{% endblock %}
