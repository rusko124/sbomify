{% load cache %}
{# Modern Balanced Footer Component #}
{% if debug %}
    <footer class="modern-footer">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="footer-left">
                    <div class="brand-section">
                        <a href="https://sbomify.com"
                           class="brand-link"
                           target="_blank"
                           rel="noopener">
                            <strong>sbomify</strong>
                        </a>
                        {% if app_version %}
                            <a href="https://github.com/sbomify/sbomify/releases/tag/v{{ app_version }}"
                               class="version-tag"
                               target="_blank"
                               rel="noopener"
                               title="View release notes">v{{ app_version }}</a>
                        {% endif %}
                    </div>
                    <div class="copyright-text">© {% now "Y" %} sbomify, ltd. All rights reserved.</div>
                </div>
                <div class="footer-right">
                    <nav class="footer-actions">
                        <a href="mailto:hello@sbomify.com" class="action-link">
                            <i class="fas fa-envelope"></i>
                            <span>Contact Support</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </footer>
{% else %}
    {% cache 3600 'footer' app_version %}
    <footer class="modern-footer">
        <div class="container-fluid">
            <div class="footer-content">
                <div class="footer-left">
                    <div class="brand-section">
                        <a href="https://sbomify.com"
                           class="brand-link"
                           target="_blank"
                           rel="noopener">
                            <strong>sbomify</strong>
                        </a>
                        {% if app_version %}
                            <a href="https://github.com/sbomify/sbomify/releases/tag/v{{ app_version }}"
                               class="version-tag"
                               target="_blank"
                               rel="noopener"
                               title="View release notes">v{{ app_version }}</a>
                        {% endif %}
                    </div>
                    <div class="copyright-text">© {% now "Y" %} sbomify, ltd. All rights reserved.</div>
                </div>
                <div class="footer-right">
                    <nav class="footer-actions">
                        <a href="mailto:hello@sbomify.com" class="action-link">
                            <i class="fas fa-envelope"></i>
                            <span>Contact Support</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </footer>
{% endcache %}
{% endif %}
