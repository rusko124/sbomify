{% load static %}
{% load django_vite %}
{% load cache %}
{% load schema_tags %}
{% load breadcrumb_tags %}
{% load brand_tags %}
<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport"
                  content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <!-- SEO Meta Tags -->
            <meta name="description"
                  content="{% block meta_description %}Software Bill of Materials (SBOM) - {% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %}{% endblock %}">
            <meta name="keywords"
                  content="{% block meta_keywords %}SBOM, Software Bill of Materials, security, compliance, vulnerability management{% endblock %}">
            <meta name="author"
                  content="{% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %}">
            <!-- Favicon -->
            <link rel="apple-touch-icon"
                  sizes="180x180"
                  href="{% static 'img/favicons/apple-touch-icon.png' %}">
            <link rel="icon"
                  type="image/png"
                  sizes="32x32"
                  href="{% static 'img/favicons/favicon-32x32.png' %}">
            <link rel="icon"
                  type="image/png"
                  sizes="16x16"
                  href="{% static 'img/favicons/favicon-16x16.png' %}">
            <link rel="icon"
                  type="image/svg+xml"
                  href="{% static 'img/favicons/favicon.svg' %}">
            <link rel="manifest" href="{% static 'manifest.webmanifest' %}">
            <!-- Schema.org metadata -->
            {% schema_org_metadata %}
            <!-- Open Graph / Facebook -->
            <meta property="og:type" content="website">
            <meta property="og:url" content="{{ request.build_absolute_uri }}">
            <meta property="og:title"
                  content="{% block og_title %}Software Bill of Materials (SBOM) - {% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %}{% endblock %}">
            <meta property="og:description"
                  content="{% block og_description %}Software Bill of Materials (SBOM) - {% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %}{% endblock %}">
            <meta property="og:image"
                  content="{% if brand.brand_image %}{{ brand.brand_image }}{% else %}{% static 'img/favicons/android-chrome-512x512.png' %}{% endif %}">
            <!-- Twitter -->
            <meta property="twitter:card" content="summary_large_image">
            <meta property="twitter:url" content="{{ request.build_absolute_uri }}">
            <meta property="twitter:title"
                  content="{% block twitter_title %}Software Bill of Materials (SBOM) - {% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %}{% endblock %}">
            <meta property="twitter:description"
                  content="{% block twitter_description %}Software Bill of Materials (SBOM) - {% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %}{% endblock %}">
            <meta property="twitter:image"
                  content="{% if brand.brand_image %}{{ brand.brand_image }}{% else %}{% static 'img/favicons/android-chrome-512x512.png' %}{% endif %}">
            <!-- Fonts -->
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
                  rel="stylesheet">
            <!-- CSS -->
            <link href="{% static 'css/light.css' %}" rel="stylesheet">
            <link href="{% static 'site.css' %}" rel="stylesheet">
            <link href="{% static 'css/custom.css' %}" rel="stylesheet">
            <!-- Custom CSS Variables for Branding -->
            <style>
            :root {
                --brand-color: {{ brand.brand_color|default:'#4f46e5' }};
                --accent-color: {{ brand.accent_color|default:'#7c8b9d' }};
                --brand-color-rgb: {{ brand.brand_color|default:'#4f46e5'|hex_to_rgb }};
                --accent-color-rgb: {{ brand.accent_color|default:'#7c8b9d'|hex_to_rgb }};
                --brand-color-light: {{ brand.brand_color|default:'#4f46e5'|lighten:0.1 }};
                --brand-color-dark: {{ brand.brand_color|default:'#4f46e5'|darken:0.1 }};
                --accent-color-light: {{ brand.accent_color|default:'#7c8b9d'|lighten:0.1 }};
                --accent-color-dark: {{ brand.accent_color|default:'#7c8b9d'|darken:0.1 }};
                --text-primary: #1a202c;
                --text-secondary: #64748b;
                --text-muted: #94a3b8;
                --bg-primary: #ffffff;
                --bg-secondary: #f8fafc;
                --bg-tertiary: #f1f5f9;
                --border-color: #e2e8f0;
                --border-color-light: #f1f5f9;
                --shadow-color: rgba(0, 0, 0, 0.1);
                --shadow-color-light: rgba(0, 0, 0, 0.05);
                --radius-sm: 0.375rem;
                --radius-md: 0.5rem;
                --radius-lg: 0.75rem;
                --font-family-primary: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            }

            /* Dark mode support based on brand colors */
            @media (prefers-color-scheme: dark) {
                :root {
                    --text-primary: #f8fafc;
                    --text-secondary: #cbd5e1;
                    --text-muted: #94a3b8;
                    --bg-primary: #0f172a;
                    --bg-secondary: #1e293b;
                    --bg-tertiary: #334155;
                    --border-color: #334155;
                    --border-color-light: #475569;
                    --shadow-color: rgba(0, 0, 0, 0.3);
                    --shadow-color-light: rgba(0, 0, 0, 0.15);
                }
            }
            </style>
            {% block extra_css %}{% endblock %}
            <title>
                {% block title %}{% endblock %}
                -
                {% if brand.name %}
                    {{ brand.name }}
                {% else %}
                    sbomify
                {% endif %}
            </title>
        {% endblock %}
        {% vite_hmr_client %}
    </head>
    <body class="public-page" data-theme="public">
        <!-- Public Page Layout -->
        <div class="public-page-layout">
            <!-- Brand Header -->
            <header class="public-header">
                <div class="public-header-container">
                    <div class="brand-section">
                        {% if brand.brand_image %}
                            <img src="{{ brand.brand_image }}"
                                 alt="{% if brand.name %}{{ brand.name }}{% else %}sbomify{% endif %} Logo"
                                 class="brand-logo"
                                 width="32"
                                 height="32">
                        {% else %}
                            <img src="{% static 'img/sbomify.svg' %}"
                                 alt="sbomify Logo"
                                 class="brand-logo"
                                 width="32"
                                 height="32">
                        {% endif %}
                        {% if brand.name %}<span class="brand-name">{{ brand.name }}</span>{% endif %}
                    </div>
                    <!-- Optional: Add navigation or status indicators -->
                    {% block header_content %}{% endblock %}
                </div>
            </header>
            <!-- Main Content -->
            <main class="public-main">
                <div class="public-content-container">
                    <!-- Breadcrumb Navigation -->
                    {% block breadcrumb %}{% endblock %}
                    <!-- Page Content -->
                    {% block content %}{% endblock %}
                </div>
            </main>
            <!-- Footer -->
            <footer class="public-footer">
                <div class="public-footer-container">
                    <div class="footer-content">
                        <div class="footer-branding">
                            {% if brand.name %}<span class="footer-brand-name">{{ brand.name }}</span>{% endif %}
                            <span class="footer-powered-by">Powered by <a href="https://sbomify.com" target="_blank" rel="noopener">sbomify</a></span>
                        </div>
                        {% block footer_content %}{% endblock %}
                    </div>
                </div>
            </footer>
        </div>
        <!-- Scripts -->
        <script src="{% static 'js/app.js' %}"></script>
        {% block scripts %}{% endblock %}
        {% vite_asset 'core/js/main.ts' %}
    </body>
</html>
<style>
/* Public Page Layout Styles */
.public-page {
    font-family: var(--font-family-primary);
    color: var(--text-primary);
    background-color: var(--bg-secondary);
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

.public-page-layout {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Public Header */
.public-header {
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-tertiary) 100%);
    padding: 2rem 0;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--border-color);
    border-top: 3px solid var(--brand-color);
}

.public-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, transparent 0%, rgba(var(--brand-color-rgb), 0.03) 100%);
    pointer-events: none;
}

.public-header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
}

.brand-section {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    text-align: center;
}

.brand-logo {
    height: 3rem;
    max-width: 12rem;
    width: auto;
    object-fit: contain;
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.05));
}

.brand-name {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--brand-color);
    text-shadow: none;
}

/* Main Content */
.public-main {
    flex: 1;
    position: relative;
    background: var(--bg-secondary);
}

.public-content-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
}

/* Footer */
.public-footer {
    background: var(--bg-primary);
    border-top: 1px solid var(--border-color);
    padding: 2rem 0;
    margin-top: 4rem;
}

.public-footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
}

.footer-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
}

.footer-branding {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    font-size: 0.875rem;
}

.footer-brand-name {
    font-weight: 600;
    color: var(--brand-color);
}

.footer-powered-by a {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
}

.footer-powered-by a:hover {
    color: var(--accent-color-dark);
}

/* Responsive Design */
@media (max-width: 768px) {
    .public-header {
        padding: 1.5rem 0;
    }

    .public-header-container,
    .public-content-container,
    .public-footer-container {
        padding: 0 1rem;
    }

    .brand-section {
        flex-direction: column;
        gap: 0.75rem;
    }

    .brand-logo {
        height: 2.5rem;
        max-width: 10rem;
    }

    .brand-name {
        font-size: 1.25rem;
    }

    .footer-content {
        flex-direction: column;
        text-align: center;
    }
}

@media (max-width: 480px) {
    .public-header {
        padding: 1rem 0;
    }

    .public-header-container,
    .public-content-container,
    .public-footer-container {
        padding: 0 0.75rem;
    }

    .brand-section {
        gap: 0.5rem;
    }

    .brand-logo {
        height: 2rem;
        max-width: 8rem;
    }

    .brand-name {
        font-size: 1.125rem;
    }

    .public-content-container {
        padding: 1.5rem 0.75rem;
    }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
    * {
        transition-duration: 0.01ms !important;
        animation-duration: 0.01ms !important;
    }
}

/* Focus styles */
*:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 2px;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    :root {
        --border-color: #000000;
        --shadow-color: rgba(0, 0, 0, 0.3);
    }
}

/* Meta Badges */
.meta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    border: 1px solid transparent;
    transition: all 0.2s ease;
}

.meta-badge--primary {
    background: rgba(var(--brand-color-rgb), 0.1);
    color: var(--brand-color);
    border-color: rgba(var(--brand-color-rgb), 0.2);
}

.meta-badge--secondary {
    background: rgba(var(--accent-color-rgb), 0.1);
    color: var(--accent-color);
    border-color: rgba(var(--accent-color-rgb), 0.2);
}

.meta-badge i {
    font-size: 0.75rem;
}
</style>
