{% extends "core/base.html.j2" %}
{% block title %}{{ exception.status_code }} - {{ exception.reason_phrase }}{% endblock %}
{% block main %}
    <main class="d-flex w-100 h-100">
        <div class="container d-flex flex-column">
            <div class="row vh-100">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
                    <div class="d-table-cell align-middle">
                        <div class="text-center">
                            <h1 class="display-1 fw-bold">{{ exception.status_code }}</h1>
                            <p class="h2">{{ exception.reason_phrase }}</p>
                            <p class="lead fw-normal mt-3 mb-4">{{ exception.content.decode }}</p>
                            <a href="/" class="btn btn-primary btn-lg">Return to website</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
