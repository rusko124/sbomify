{% extends "core/base.html.j2" %}
{% block title %}sbomify Login{% endblock %}
{% block login_content %}
    <h1 class="h3 mb-4 text-center">Log In / Register</h1>
    <div class="text-center mb-4">
        <p>Please log in or register to access your account.</p>
    </div>
    <div class="d-grid gap-2">
        <form method="post" action="{% url 'openid_connect_login' 'keycloak' %}">
            {% csrf_token %}
            <button type="submit" class="btn btn-primary btn-lg w-100">Log In / Register</button>
        </form>
    </div>
{% endblock %}
