{% extends "core/dashboard_base.html.j2" %}
{% load static %}
{% load django_vite %}
{% block title %}{{ component.get_component_type_display }}: {{ data.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/component-detailed-private.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas {% if component.component_type == 'sbom' %}fa-file-code{% elif component.component_type == 'document' %}fa-file-alt{% endif %} me-3 text-primary"></i>
                    {{ data.name }}
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="{% url 'core:component_details' component.id %}">{{ component.name }}</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Detailed View</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-cube me-2 text-primary"></i>
                <span class="meta-label">Component</span>
            </span>
            <span class="meta-divider">•</span>
            {% if component.component_type == 'sbom' %}
                <span class="meta-item">
                    <span class="meta-label">Format:</span>
                    <span class="badge bg-success-subtle text-success ms-1">
                        {% if data.format == 'cyclonedx' %}
                            CycloneDX
                        {% elif data.format == 'spdx' %}
                            SPDX
                        {% else %}
                            {{ data.format|upper }}
                        {% endif %}
                        {{ data.format_version }}
                    </span>
                </span>
                {% if data.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="meta-label">Version:</span>
                        <span class="ms-1 version-display" title="{{ data.version }}">{{ data.version }}</span>
                    </span>
                {% endif %}
            {% elif component.component_type == 'document' %}
                <span class="meta-item">
                    <span class="meta-label">Type:</span>
                    <span class="badge bg-info-subtle text-info ms-1">{{ data.document_type|default:"Document" }}</span>
                </span>
                {% if data.version %}
                    <span class="meta-divider">•</span>
                    <span class="meta-item">
                        <span class="meta-label">Version:</span>
                        <span class="ms-1 version-display" title="{{ data.version }}">{{ data.version }}</span>
                    </span>
                {% endif %}
            {% endif %}
        </div>
    </div>
    {% if component.component_type == 'sbom' %}
        <div class="row">
            <div class="col-12 col-lg-5">
                <div class="vc-sbom-metadata-card"
                     data-sbom-id="{{ data.id }}"
                     data-sbom-name="{{ data.name }}"
                     data-created-at="{{ data.created_at.isoformat }}"
                     data-source-display="{{ data.source_display }}"
                     data-format="{{ data.format }}"
                     data-format-version="{{ data.format_version|stringformat:'s' }}"
                     data-version="{{ data.version|default:'' }}"></div>
            </div>
            <div class="col-12 col-lg-7">
                <div class="vc-sbom-actions-card" data-sbom-id="{{ data.id }}"></div>
            </div>
        </div>
    {% elif component.component_type == 'document' %}
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="vc-document-metadata-card"
                             data-document-id="{{ data.id }}"
                             data-document-name="{{ data.name }}"
                             data-created-at="{{ data.created_at }}"
                             data-document-type="{{ data.document_type|default:'' }}"
                             data-content-type="{{ data.content_type|default:'' }}"
                             data-file-size="{{ data.file_size|default:'' }}"
                             data-version="{{ data.version|default:'' }}"></div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="vc-document-description-card"
                             data-description="{{ data.description|default:'' }}"></div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="vc-document-actions-card" data-document-id="{{ data.id }}"></div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% if component.component_type == 'sbom' %}
        {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
    {% elif component.component_type == 'document' %}
        {% vite_asset 'sbomify/apps/documents/js/main.ts' %}
    {% endif %}
{% endblock %}
