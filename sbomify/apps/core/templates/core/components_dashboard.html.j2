{% extends "./dashboard_base.html.j2" %}
{% load static %}
{% load django_htmx %}
{% block title %}sbomify Components{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet" href="{% static 'css/components-dashboard.css' %}">
{% endblock %}
{% block dashboard_content %}
    <div class="dashboard">
        <div class="page-header mb-4">
            <div class="header-main">
                <div class="title-section">
                    <h1 class="item-title">
                        <i class="fas fa-cube me-3 text-primary"></i>Components
                    </h1>
                    <p class="item-subtitle">Manage individual software components and their SBOMs</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="components-list standard-card mt-3">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <div class="header-content">
                                <h4 class="card-title mb-0">Components</h4>
                                {% if has_crud_permissions %}
                                    <button class="btn btn-primary px-4"
                                            data-bs-toggle="modal"
                                            data-bs-target="#addComponentModal">Add Component</button>
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-body">
                            {% if components %}
                                <div class="table-responsive">
                                    <table class="table dashboard-table">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Type</th>
                                                <th>Content</th>
                                                <th class="text-center">Public?</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for component in components %}
                                                <tr>
                                                    <td data-label="Name">
                                                        <a href="{% url 'core:component_details' component.id %}"
                                                           class="text-primary text-decoration-none">
                                                            {{ component.name }}
                                                        </a>
                                                    </td>
                                                    <td data-label="Type">
                                                        <span class="badge bg-info-subtle text-info">
                                                            {% if component.component_type == "sbom" %}
                                                                SBOM
                                                            {% elif component.component_type == "document" %}
                                                                Document
                                                            {% else %}
                                                                Unknown
                                                            {% endif %}
                                                        </span>
                                                    </td>
                                                    <td data-label="Content">
                                                        {% if component.component_type == "sbom" %}
                                                            {% if component.sbom_count == 1 %}
                                                                1 SBOM
                                                            {% else %}
                                                                {{ component.sbom_count }} SBOMs
                                                            {% endif %}
                                                        {% elif component.component_type == "document" %}
                                                            <span class="text-muted">Document</span>
                                                        {% else %}
                                                            <span class="text-muted">-</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-center" data-label="Public?">
                                                        {% if component.is_public %}
                                                            <span class="badge bg-success-subtle text-success">Public</span>
                                                        {% else %}
                                                            <span class="badge bg-secondary-subtle text-secondary">Private</span>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="dashboard-empty">
                                    <p class="mb-0">No components added</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if has_crud_permissions %}
            <div id="addComponentModal"
                 class="modal fade"
                 data-bs-backdrop="static"
                 tabindex="-1"
                 aria-labelledby="addComponentModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0">
                        <div class="modal-header border-bottom-0 pb-0">
                            <h4 id="addComponentModalLabel" class="modal-title text-secondary">Add Component</h4>
                            <button type="button"
                                    class="btn-close"
                                    data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body pt-3">
                            <form id="addComponentForm"
                                  method="post"
                                  action="{% url 'core:components_dashboard' %}">
                                {% csrf_token %}
                                <div class="mb-4">
                                    <label class="form-label text-secondary fw-medium" for="componentName">
                                        Name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input id="componentName"
                                           name="name"
                                           type="text"
                                           class="form-control form-control-lg"
                                           required />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label text-secondary fw-medium" for="componentType">
                                        Type
                                        <span class="text-danger">*</span>
                                    </label>
                                    <select id="componentType"
                                            name="component_type"
                                            class="form-select form-select-lg"
                                            required>
                                        <option value="sbom">SBOM</option>
                                        <option value="document">Document</option>
                                    </select>
                                    <div class="form-text">Choose the type of component you're creating</div>
                                </div>
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <button type="button"
                                            class="btn btn-outline-secondary"
                                            data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary px-4">Create Component</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
{% block scripts %}
    {% htmx_script %}
{% endblock %}
