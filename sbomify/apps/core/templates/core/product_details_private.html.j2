{% extends "./dashboard_base.htmx.j2" %}
{% load static %}
{% load django_vite %}
{% load utils %}
{% block title %}sbomify Product: {{ product.name }}{% endblock %}
{% block extra_styles %}
    <link rel="stylesheet"
          href="{% static 'css/product-details-private.css' %}">
    <link rel="stylesheet" href="{% static 'css/components/stat-card.css' %}">
{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main mb-3">
            <div class="title-section">
                <h1 class="item-title">
                    {% if has_crud_permissions %}
                        <span class="vc-editable-single-field"
                              data-item-type="product"
                              data-item-id="{{ product.id }}"
                              data-item-value="{{ product.name }}"></span>
                    {% else %}
                        {{ product.name }}
                    {% endif %}
                </h1>
                {% if has_crud_permissions %}
                    <div class="vc-public-status-toggle"
                         data-item-type="product"
                         data-item-id="{{ product.id }}"
                         data-public-url="{{ APP_BASE_URL }}{% url 'core:product_details_public' product.id %}"
                         data-inline="true"></div>
                {% endif %}
            </div>
        </div>
        <div class="header-meta">
            <span class="meta-item">
                <i class="fas fa-box me-2 text-primary"></i>
                <span class="meta-label">Product</span>
            </span>
            <span class="meta-divider">â€¢</span>
            <span class="meta-item">
                <span class="vc-copyable-value meta-id"
                      data-value="{{ product.id }}"
                      title="Product ID: {{ product.id }} (click to copy)">{{ product.id }}</span>
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="container-fluid p-0">
                <div class="row">
                    {% for key in "projects,components"|split:"," %}
                        <div class="col-md-4">
                            <div class="standard-card mt-3">
                                <div class="card stats-card shadow-sm">
                                    <div class="card-header">
                                        <div class="header-content">
                                            <h4 class="card-title mb-0">{{ key|title }} in Product</h4>
                                        </div>
                                    </div>
                                    <div class="card-body text-center">
                                        <div class="stat-content">
                                            <div class="stat-display">
                                                <div class="stat-value">
                                                    <span class="display-4 stat-number text-dark-emphasis">
                                                        {% if key == "projects" %}
                                                            {{ dashboard_stats.total_projects|default:0 }}
                                                        {% elif key == "components" %}
                                                            {{ dashboard_stats.total_components|default:0 }}
                                                        {% endif %}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="vc-item-assignment-manager"
                 data-parent-type="product"
                 data-parent-id="{{ product.id }}"
                 data-has-crud-permissions="{% if has_crud_permissions %}true{% else %}false{% endif %}"></div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="vc-product-identifiers"
                 data-product-id="{{ product.id }}"
                 data-has-crud-permissions="{% if has_crud_permissions %}true{% else %}false{% endif %}"
                 data-billing-plan="{{ team_billing_plan }}"></div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="vc-product-links"
                 data-product-id="{{ product.id }}"
                 data-has-crud-permissions="{% if has_crud_permissions %}true{% else %}false{% endif %}"></div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="vc-product-releases"
                 data-product-id="{{ product.id }}"
                 data-has-crud-permissions="{% if has_crud_permissions %}true{% else %}false{% endif %}"></div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <div class="standard-card">
                <div class="card download-card shadow-sm">
                    <div class="card-header">
                        <h4 class="card-title mb-0">
                            <i class="fas fa-download me-2"></i>Latest Release
                        </h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="text-muted mb-3">
                            Download SBOM from the latest release containing the most current artifacts for this product
                        </p>
                        <a class="btn btn-primary download-btn"
                           href="{% url 'core:sbom_download_product' product.id %}">
                            <i class="fas fa-download me-2"></i>Download Latest Release
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if has_crud_permissions %}
        <div class="row mt-3">
            <div class="col-12">
                <div class="vc-product-danger-zone"
                     data-product-id="{{ product.id }}"
                     data-product-name="{{ product.name }}"
                     data-csrf-token="{{ csrf_token }}"></div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block scripts %}
    {% vite_asset 'sbomify/apps/core/js/main.ts' %}
    {% vite_asset 'sbomify/apps/sboms/js/main.ts' %}
{% endblock %}
