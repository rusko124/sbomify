{% extends "core/dashboard_base.html.j2" %}
{% load widget_tweaks %}
{% load django_vite %}
{% block title %}sbomify Workspace Settings: {{ team.name }}{% endblock %}
{% block content %}
    <div class="page-header mb-4">
        <div class="header-main">
            <div class="title-section">
                <h1 class="item-title">
                    <i class="fas fa-cog me-3 text-primary"></i>
                    Workspace Settings
                </h1>
                <p class="item-subtitle">Manage your workspace configuration, members, and preferences</p>
            </div>
            <div class="header-actions">
                <span class="workspace-key">
                    <span class="vc-copyable-value"
                          data-value="{{ team.key }}"
                          title="Workspace Key: {{ team.key }} (click to copy)">{{ team.key }}</span>
                </span>
            </div>
        </div>
    </div>
    <!-- Navigation Tabs -->
    <div class="settings-nav mb-4">
        <nav class="nav nav-pills nav-fill settings-tabs">
            <a class="nav-link"
               data-bs-toggle="pill"
               href="#members"
               data-tab="members">
                <i class="fas fa-users me-2"></i>
                Members
            </a>
            <a class="nav-link"
               data-bs-toggle="pill"
               href="#branding"
               data-tab="branding">
                <i class="fas fa-palette me-2"></i>
                Branding
            </a>
            {% if request.session.current_team.role == 'owner' %}
                <a class="nav-link"
                   data-bs-toggle="pill"
                   href="#billing"
                   data-tab="billing">
                    <i class="fas fa-credit-card me-2"></i>
                    Billing
                </a>
            {% endif %}
        </nav>
    </div>
    <!-- Tab Content -->
    <div class="tab-content settings-content mt-4">
        <!-- Members Tab -->
        <div class="tab-pane fade" id="members">
            <div class="row g-4 g-lg-5">
                <div class="col-12">
                    <StandardCard title="Team Members" variant="settings" size="large" shadow="md">
                    <!-- Team Members Component -->
                    {{ members_data|json_script:"team-members-data" }}
                    <div class="vc-team-members"
                         data-team-key="{{ team.key }}"
                         data-team-members-element-id="team-members-data"
                         data-user-role="{{ request.session.current_team.role }}"
                         data-csrf-token="{{ csrf_token }}"></div>
                    </StandardCard>
                </div>
                {% if request.session.current_team.role == "owner" or request.session.current_team.role == "admin" %}
                    <div class="col-12">
                        <StandardCard title="Pending Invitations" variant="settings" size="large" shadow="md">
                        <!-- Team Invitations Component -->
                        {{ invitations_data|json_script:"team-invitations-data" }}
                        <div class="vc-team-invitations"
                             data-team-key="{{ team.key }}"
                             data-team-invitations-element-id="team-invitations-data"
                             data-user-role="{{ request.session.current_team.role }}"
                             data-csrf-token="{{ csrf_token }}"></div>
                        </StandardCard>
                    </div>
                {% endif %}
            </div>
        </div>
        <!-- Branding Tab -->
        <div class="tab-pane fade" id="branding">
            <div class="row">
                <div class="col-12">
                    <!-- Team Branding Component -->
                    <div class="vc-team-branding" data-team-key="{{ team.key }}"></div>
                </div>
            </div>
        </div>
        {% if request.session.current_team.role == 'owner' %}
            <!-- Billing Tab -->
            <div class="tab-pane fade" id="billing">
                <div class="row">
                    <div class="col-12">
                        <!-- Team Billing Component -->
                        <div class="vc-team-billing"
                             data-team-key="{{ team.key }}"
                             data-billing-plan="{{ team.billing_plan }}"
                             data-billing-plan-limits="{{ team.billing_plan_limits|default:''|escape }}"
                             data-user-role="{{ request.session.current_team.role }}"></div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    <style>
        .page-header {
            background: linear-gradient(135deg, #f8fafc, #f1f5f9);
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
            margin-bottom: 2rem;
        }

        .header-main {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .title-section {
            flex: 1;
        }

        .item-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #1a202c;
            margin: 0;
            line-height: 1.2;
            display: flex;
            align-items: center;
        }

        .item-subtitle {
            color: #6b7280;
            font-size: 1.1rem;
            margin: 0.5rem 0 0 0;
        }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .workspace-key {
            background: #f1f5f9;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
            font-size: 0.875rem;
            color: #475569;
        }

        .workspace-key .vc-copyable-value {
            cursor: pointer;
            transition: color 0.2s ease;
        }

        .workspace-key .vc-copyable-value:hover {
            color: #1e293b;
        }

        /* Settings Navigation */
        .settings-nav {
            background: #ffffff;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 0.5rem;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .settings-tabs .nav-link {
            border-radius: 8px;
            color: #6b7280;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            transition: all 0.2s ease;
            border: none;
            background: transparent;
        }

        .settings-tabs .nav-link:hover {
            background: #e5e7eb;
            color: #374151;
        }

        .settings-tabs .nav-link.active {
            background: #f8fafc;
            color: #1f2937;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            border: 1px solid #e2e8f0;
        }

        /* Settings Content */
        .settings-content {
            min-height: 400px;
            padding: 0 0.5rem;
        }





        /* Responsive Design */

        /* Prevent horizontal overflow */
        .settings-content {
            overflow-x: hidden;
        }



                /* Medium screens (tablets) */
        @media (max-width: 991.98px) {
            .item-title {
                font-size: 2.25rem;
            }

            .item-subtitle {
                font-size: 1rem;
            }

            .settings-content {
                padding: 0 0.25rem;
            }

            .workspace-info-content {
                gap: 1.5rem;
            }

            .workspace-name-card {
                padding: 1.25rem;
            }


        }

        /* Small tablets */
        @media (max-width: 768px) {
            .item-title {
                font-size: 2rem;
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            .header-main {
                flex-direction: column;
                gap: 1.5rem;
                align-items: stretch;
            }

            .header-actions {
                justify-content: flex-start;
            }

            .settings-tabs {
                flex-direction: column;
                gap: 0.25rem;
            }

            .settings-tabs .nav-link {
                text-align: center;
                padding: 0.625rem 1rem;
            }

            .settings-content {
                padding: 0;
            }

            .stats-grid {
                grid-template-columns: 1fr 1fr;
                gap: 1rem;
            }


        }

        /* Mobile phones */
        @media (max-width: 576px) {
            .page-header {
                padding: 1.25rem;
                border-radius: 8px;
                margin: 0 -0.5rem 1rem -0.5rem;
            }

            .item-title {
                font-size: 1.75rem;
            }

            .item-subtitle {
                font-size: 0.9rem;
            }

            .settings-nav {
                border-radius: 8px;
                padding: 0.25rem;
                margin: 0 -0.5rem;
            }

            .settings-tabs .nav-link {
                padding: 0.5rem 0.75rem;
                font-size: 0.875rem;
            }

            .settings-content {
                margin: 0 -0.5rem;
                padding: 0 0.5rem;
            }



            .stats-grid {
                grid-template-columns: 1fr;
                gap: 0.75rem;
            }

                        .workspace-name-display {
                font-size: 1.125rem;
                padding: 0.5rem 0.75rem;
            }

            .stat-item {
                padding: 1rem;
            }

            .stat-value {
                font-size: 1.5rem;
            }
        }

                /* Extra small phones */
        @media (max-width: 375px) {
            .page-header {
                padding: 1rem;
            }

            .item-title {
                font-size: 1.5rem;
            }

            .settings-tabs .nav-link {
                padding: 0.5rem;
                font-size: 0.8rem;
            }



            .stat-label {
                font-size: 0.7rem;
            }
        }
    </style>
{% endblock %}
{% block scripts %}
    {% vite_asset 'core/js/main.ts' %}
    {% vite_asset 'teams/js/main.ts' %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get available tabs
            const availableTabs = ['members', 'branding'];
            {% if request.session.current_team.role == 'owner' %}
                availableTabs.push('billing');
            {% endif %}

            // Function to activate a tab
            function activateTab(tabName) {
                // Remove active class from all nav links and tab panes
                document.querySelectorAll('.settings-tabs .nav-link').forEach(link => {
                    link.classList.remove('active');
                });
                document.querySelectorAll('.tab-pane').forEach(pane => {
                    pane.classList.remove('show', 'active');
                });

                // Add active class to the selected tab nav link and pane
                const navLink = document.querySelector(`.settings-tabs .nav-link[href="#${tabName}"]`);
                const tabPane = document.getElementById(tabName);

                if (navLink && tabPane) {
                    navLink.classList.add('active');
                    tabPane.classList.add('show', 'active');
                }
            }

            // Function to get the current tab from URL hash
            function getCurrentTab() {
                const hash = window.location.hash.substring(1); // Remove the #
                return availableTabs.includes(hash) ? hash : 'members'; // Default to members
            }

            // Activate tab based on current URL hash
            activateTab(getCurrentTab());

            // Listen for hash changes
            window.addEventListener('hashchange', function() {
                activateTab(getCurrentTab());
            });

            // Update hash when tab links are clicked
            document.querySelectorAll('.settings-tabs .nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetTab = this.getAttribute('href').substring(1);
                    if (availableTabs.includes(targetTab)) {
                        history.pushState(null, null, `#${targetTab}`);
                        activateTab(targetTab);
                    }
                });
            });
        });
    </script>
{% endblock %}
